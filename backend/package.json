{
  "name": "gestor-gastos-backend",
  "version": "1.0.0",
  "description": "Backend for the expense manager app",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/server.ts\"",
    "prebuild": "node scripts/build-shared.js",
    "build": "tsc",
    "afip:generar-cert": "node scripts/generar-certificado-afip.js",
    "afip:exportar-cert": "node scripts/exportar-certificados.cjs",
    "afip:verificar-cert": "node scripts/verificar-certificado-wsass.js",
    "afip:debug-wsaa": "node scripts/debug-wsaa-url.js",
    "afip:test-sdk-api": "node scripts/test-sdk-api-direct.js",
    "afip:test-completo-debug": "node scripts/test-completo-debug.js",
    "afip:test-sin-forzar": "node scripts/test-sin-forzar-ta.js",
    "afip:usar-cuit-prueba": "node scripts/usar-cuit-prueba.js",
    "afip:preparar-railway": "node scripts/preparar-railway.js",
    "afip:autorizar-servicio": "node scripts/autorizaeWSDev.js",
    "afip:diagnostico": "node scripts/diagnostico-afip-detallado.js",
    "afip:listar-puntos": "node scripts/listar-puntos-venta.js",
    "afip:verificar-estado": "node scripts/verificar-estado-afip.js",
    "afip:verificar-endpoints": "node scripts/verificar-endpoints-afip.js",
    "afip:generar-cert-manual": "node scripts/generar-certificado-manual.js",
    "afip:crear-punto-venta": "node scripts/crear-punto-venta.js",
    "afip:test-conexion": "node scripts/test-afip-conexion.js",
    "afip:test-completo": "node scripts/test-afip-completo.js",
    "afip:generar-datos": "node scripts/generar-datos-prueba.js",
    "afip:generar-ta-local": "node scripts/obtener-ta-afip.js",
    "afip:setup-local": "node scripts/setup-local-afip.js",
    "test": "jest --config ./jest.config.cjs --runInBand",
    "test:watch": "jest --config ./jest.config.cjs --watch"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@mygestor/shared": "file:../shared",
    "@types/pdfkit": "^0.17.3",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.0",
    "node-cron": "^4.2.1",
    "pdfkit": "^0.17.2",
    "qrcode": "^1.5.4",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.24",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode": "^1.5.6",
    "@types/supertest": "^6.0.3",
    "@types/xml2js": "^0.4.14",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.4.3",
    "mongodb-memory-server-core": "^10.4.3",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}