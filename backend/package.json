{
  "name": "gestor-gastos-backend",
  "version": "1.0.0",
  "description": "Backend for the expense manager app",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/server.ts\"",
    "build": "tsc",
    "afip:generar-cert": "node scripts/generar-certificado-afip.js",
    "afip:generar-cert-manual": "node scripts/generar-certificado-manual.js",
    "afip:test-conexion": "node scripts/test-afip-conexion.js",
    "afip:test-completo": "node scripts/test-afip-completo.js",
    "afip:generar-datos": "node scripts/generar-datos-prueba.js"
  },
  "dependencies": {
    "@afipsdk/afip.js": "^1.2.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.3.0",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/moment": "^2.11.29",
    "@types/node": "^20.19.24",
    "@types/qrcode": "^1.5.6",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
