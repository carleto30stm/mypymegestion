# Example .env for backend

# Environment
NODE_ENV=development
PORT=3001

# MongoDB Connection
MONGODB_URI=
MONGO_DB_NAME=mygestor
MONGO_USER=your_username
MONGO_PASSWORD=your_password

# JWT Secret for token generation (use a strong secret in production)
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# AFIP Configuration for Electronic Billing
AFIP_CUIT=20123456789
AFIP_PRODUCTION=false
AFIP_CERT_PATH=./certs/cert.crt
AFIP_KEY_PATH=./certs/private.key
AFIP_TA_FOLDER=./afip_tokens
AFIP_PUNTO_VENTA=1
SDK_ACCESS_TOKEN=

# Company Data (Empresa)
EMPRESA_CUIT=20123456789
EMPRESA_RAZON_SOCIAL=Mi Empresa SA
EMPRESA_DOMICILIO=Av. Principal 123, Ciudad, Provincia
EMPRESA_CONDICION_IVA=Responsable Inscripto
EMPRESA_IIBB=901-123456-7
EMPRESA_INICIO_ACTIVIDADES=2020-01-01

